{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    
    <div class="row">
        <div class="col-md-8"><h1 class="my-3">Gestion des Utilisateurs</h1></div>
        <div class="col-md-4">
            <a href="{{ path('dashboard_account_new') }}" class="btn btn-primary float-center my-3">
             <h4><i class="fas fa-user-plus"></i> Nouvel Utilisateur</h4></a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Noms</th>
                <th>Email</th>
                <th>Description</th>
                <th class="text-center">Balance</th>
                <th class="text-center">Credit deduit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% set i = 0 %} {% set total = 0 %}
            {% for customer in customers %}
               
                <tr>
                    {% set i = i+1 %}
                    <td>{{i}}</td>
                    <td>{{customer.createdAt | date('Y-m-d')}}</td>                                     
                    <td>
                        <img src="/images/avatar.jpg" alt="Avatar de {{customer.fullName}}" class="avatar avatar-micro">
                        {{customer.fullName}}
                    </td>
                    <td>{{customer.email}}</td>  
                    <td>{{customer.description | extractText(25)}}</td>  
                    <td class="text-center">
                        <span class="badge badge-primary rounded h4">{{customer.balance ~ " SMS"}}</span>                   
                    </td>
                     <td class="text-center">
                        <span class="badge badge-danger rounded h4">{{customer.sentsms ~ " SMS"}}</span>                   
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger"
                        onclick="return confirm('Voulez-vous supprimer ce paiment ?');"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    

</div>
{% endblock %}
