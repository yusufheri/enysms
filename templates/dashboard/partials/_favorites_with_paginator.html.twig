<table class="table table-hover">
                        <thead>
                            <tr>
                                <th>NÂ°</th>
                                <th>Date</th>
                                <th>Groupe</th>
                                <th>Sender</th>
                                <th>Message</th>
                                <th width="15%" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set i = paginator.start %}
                            {% for favorite in data %}
                                <tr>
                                    {% set i = i+1 %}
                                    <td>{{i}}</td>                   
                                    <td>{{favorite.createdAt | date('d-m-Y H:i')}}</td>
                                    <td>
                                        {% set groupes = favorite.groupes %}
                                        {% if groupes|length > 0 %}
                                            {% for groupe in groupes %}
                                                <span class="badge badge-primary" data-toggle="tooltip" data-placement="bottom" title="{{groupe.title}}" data-original-title="{{groupe.title}}">{{groupe.title | extractText(20)}}</span>                                                 
                                            {% endfor %}                  
                                        {% else %}
                                            <span class="badge badge-danger">{{"Single SMS"}}</span>  
                                        {% endif %}
                                    </td>
                                    <td>{{favorite.sender.title}}</td>
                                    <td>{{favorite.content | extractText(30)}}</td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-primary"><i class="fas fa-check"></i>  {{ favorite.successMessages }}</a> 
                                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i>  {{ favorite.errorMessages }}</a> 
                                                        
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ paginator.display }}